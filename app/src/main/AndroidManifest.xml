<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.p2psample">

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:name=".P2PApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".connection.ConnectionActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".messaging.MessagingActivity"
            android:parentActivityName=".connection.ConnectionActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".connection.ConnectionActivity" />
        </activity>
        <activity
            android:name=".LogActivity"
            android:parentActivityName=".connection.ConnectionActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".connection.ConnectionActivity" />
        </activity>
    </application>

</manifest>